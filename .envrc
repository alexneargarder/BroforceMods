# direnv configuration for auto-activation
# This file enables automatic environment activation when you cd into this directory

if ! has devenv; then
  echo "‚ùå devenv is not installed. Please install it first:"
  echo "  nix-env -iA devenv -f https://github.com/cachix/devenv/archive/latest.tar.gz"
  echo "  or"
  echo "  nix profile install --accept-flake-config github:cachix/devenv/latest"
else
  # Use devenv's direnv integration
  source_url "https://raw.githubusercontent.com/cachix/devenv/d1f7b48e35e6dee421cfd0f51481d17f77586997/direnvrc" "sha256-YBzqskFZxmNb3kYVoKD9ZixoPXJh1C9ZvTLGFRkauZ0="

  # Initialize devenv
  use devenv
fi